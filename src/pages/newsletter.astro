---
import PageLayout from '@layout/PageLayout.astro';
---

<style type="text/css">
  #mc_embed_signup {
    background: #fff;
    clear: left;
    font:
      14px Helvetica,
      Arial,
      sans-serif;
    width: 600px;
  }
  /* Add your own Mailchimp form style overrides in your site stylesheet or in this style block.
We recommend moving this block and the preceding CSS link to the HEAD of your HTML file. */
</style>

<PageLayout title="Reach out to us :D">
  <div class="text-center">
    <h1 class="text-5xl font-bold">
      Weekly jobs that offer relocation assistance and visa sponsorship
    </h1>
    <h2 class="p-10 text-2xl">
      We will send you a Weekly of jobs that offer visa sponsorship and relocation assistance <br />
      and resources that will help you get those opportunities
    </h2>
  </div>
  <div class="flex justify-center">
    <!-- Begin Mailchimp Signup Form -->

    <div id="mc_embed_signup">
      <form
        action="https://aucegypt.us12.list-manage.com/subscribe/post?u=5f1327076a747496c7ce750c7&id=2c4880337f&f_id=005bbde0f0"
        method="post"
        id="mc-embedded-subscribe-form"
        name="mc-embedded-subscribe-form"
        class="validate inline-block"
        target="_blank"
        novalidate>
        <div id="mc_embed_signup_scroll">
          <div class="mc-field-group">
            <input
              type="email"
              placeholder="Email Address"
              value=""
              name="EMAIL"
              class="required email rounded-full"
              id="mce-EMAIL"
              required
            />
          </div>
          <div id="mce-responses" class="clear foot">
            <div class="response" id="mce-error-response" style="display:none"></div>
            <div class="response" id="mce-success-response" style="display:none"></div>
          </div>
          <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
          <div style="position: absolute; left: -5000px;" aria-hidden="true">
            <input
              type="text"
              name="b_5f1327076a747496c7ce750c7_2c4880337f"
              tabindex="-1"
              value=""
            />
          </div>
          <div class="optionalParent">
            <div class="clear foot">
              <input
                type="submit"
                value="Subscribe"
                name="subscribe"
                id="mc-embedded-subscribe"
                class="button"
              />
            </div>
          </div>
        </div>
      </form>
    </div>
