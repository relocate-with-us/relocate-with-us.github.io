  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="og:description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:image" content={SITE_THUMBNAIL} />

