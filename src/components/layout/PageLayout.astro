---
import { SITE_DESCRIPTION, SITE_TITLE, SITE_THUMBNAIL } from 'src/consts';
import Footer from './Footer.astro';
import Navbar from './Navbar.astro';

type Props = {
  title: string;
  description?: string;
};

const { title = SITE_TITLE, description = SITE_DESCRIPTION } = Astro.props;
---

<!-- Call for ceasefire in Palestine banner -->
<script is:inline src="https://tfpb.techforpalestine.org/lib/banner.min.js"></script>
<script is:inline>
  TFPBanner.create({
    theme: 'auto',
    fixed: false
  });
</script>

